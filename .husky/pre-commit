#!/bin/sh

FRONTEND_DIR="client"
BACKEND_DIR="server"

set -e

echo "========================================\n\tâš™ï¸ Running pre-commit checks\n========================================"

branch="$(git rev-parse --abbrev-ref HEAD)"
if [ "$branch" = "main" ]; then
  echo "âŒ You can't commit directly to main - please check out a branch."
  exit 1
fi

run_step() {
  desc="$1"
  shift
  echo "$desc"
  "$@" || {
    echo "âŒ $desc failed âŒ"
    exit 1
  }
}

run_frontend_checks() {
    echo "âš™ï¸ Frontend checks"
    pushd "$FRONTEND_DIR" > /dev/null || exit 1

    run_step "Frontend - Lint" npx lint-staged
    run_step "Frontend - Build" npm run build

    popd > /dev/null
}

run_backend_checks() {
    echo "âš™ï¸ Backend checks"
    pushd "$BACKEND_DIR" > /dev/null || exit 1

    run_step "Backend - Build" dotnet build --nologo
    run_step "Backend - Format" dotnet format
    run_step "Backend - Format (Verify no Changes)" dotnet format --verify-no-changes --verbosity quiet
    run_step "Backend - Test" dotnet test

    popd > /dev/null
}

staged_files=$(git diff --cached --name-only --diff-filter=ACM)
printf "ðŸ“„ Staged Files:\n$staged_files\n"

if echo "$staged_files" | grep -q "^$FRONTEND_DIR/"; then
    run_frontend_checks
fi

if echo "$staged_files" | grep -q "^$BACKEND_DIR/"; then
    run_backend_checks
fi

echo "âœ… All pre-commit checks passed!"
